{% extends 'base.html.twig' %}



{% block body %}
<style>


.login-page {
  width: 360px;
  padding: 8% 0 0;
  margin: auto;
  height: 700px;
}
.form {
  position: relative;
  z-index: 1;
  background: #FFFFFF;
  max-width: 360px;
  margin: 0 auto 100px;
  padding: 45px;
  text-align: center;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
  margin-top: 90px;
}
.form input {
 
  outline: 0;
  background: #f2f2f2;
  width: 100%;
  border: 0;
  margin: 0 0 15px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}
.form button,input[type="submit"] {
  
  text-transform: uppercase;
  outline: 0;
  background: #ce910e;
  width: 100%;
  border: 0;
  padding: 15px;
  color: #FFFFFF;
  font-size: 14px;
  -webkit-transition: all 0.3 ease;
  transition: all 0.3 ease;
  cursor: pointer;
}
.form button:hover,.form button:active,.form button:focus {
  background: #ce910e;
}
.form .message {
  margin: 15px 0 0;
  color: #b3b3b3;
  font-size: 12px;
}
.form .message a {
  color: #ce910e;
  text-decoration: none;
}
.form .register-form {
  display: none;
}
.container {
  position: relative;
  z-index: 1;
  max-width: 300px;
  margin: 0 auto;
}
.container:before, .container:after {
  content: "";
  display: block;
  clear: both;
}
.container .info {
  margin: 50px auto;
  text-align: center;
}
.container .info h1 {
  margin: 0 0 15px;
  padding: 0;
  font-size: 36px;
  font-weight: 300;
  color: #1a1a1a;
}
.container .info span {
  color: #4d4d4d;
  font-size: 12px;
}
.container .info span a {
  color: #000000;
  text-decoration: none;
}
.container .info span .fa {
  color: #EF3B3A;
}
body {
  background: #b99952; /* fallback for old browsers */
  background: -webkit-linear-gradient(right, #ce910e, #ce910e);
  background: -moz-linear-gradient(right, #ce910e, #ce910e);
  background: -o-linear-gradient(right, #ce910e, #ce910e);
  background: linear-gradient(to left, #ce910e, #ce910e);
  font-family: "Roboto", sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;      
}
</style>
<script>
	$('.message a').click(function(){
   $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
});
</script>

<div class="login-page">
  
			<div class="form">
		  
			  <form class="login-form" action="/login" method="POST">
				<input  name="username" type="text" placeholder="اسم المستخدم"/>
				<input type="password" placeholder="كلمة السر"/>
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
				<input type="submit" value="الدخول">
				<p class="message"> لم تسجل بعد? <a href="{{path('inscription')}}">اشترك الأن</a></p>
			  </form>
			</div>
		  </div>
{% endblock %}
